header-height = 30px

#header
  height header-height
  padding 30px 0
  margin-top 8px
  margin-bottom 120px
  font-size 20px
  line-height header-height

  @media mq-normal
    margin-top 20px
    margin-bottom 30px
    height auto
    position relative
    padding-bottom 10px
  @media mq-tablet
    margin-top 10px
    margin-bottom 15px

  a
    color color-title
    transition color .3s
    &:hover
      color color-title-hover

  h1
    margin-top 50px
    text-align center
    font-family "Lato"
    font-weight bold
    font-size 60px
    line-height 1.3
    @media mq-normal
      font-size 50px
      float none
    @media mq-mobile
      margin 0 auto 5px
      font-size 40px

  h2
    margin-top 20px
    text-align center
    font-weight normal
    font-size 20px

  .tagline
    margin-top 15px
    font-family font-sans
    font-weight 100
    font-size 32px
    color color-title
    @media mq-normal
      float none
    @media mq-mobile
      font-size 20px